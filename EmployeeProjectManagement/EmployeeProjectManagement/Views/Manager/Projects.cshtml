@{
    ViewBag.Title = "Project Details";
}
@section styles{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.css">
}
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <h2 class="text-center">Project Details</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <button type="button" class="btn btn-primary pull-right" id="btnAddProject">Add Project</button>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive table-striped table-bordered" id="tblProjects">
            <thead>
                <tr>
                    <td class="text-center">Project Name</td>
                    <td class="text-center">Cost</td>
                    <td class="text-center">Edit/Delete</td>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="modal fade" id="projectModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Add/Edit details</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-success" id="successmsg" style="display:none">
                    <p>Project Saved Successfully.</p>
                </div>
                <div class="alert alert-danger" id="errormsg" style="display:none">
                    <p>An error has occurred. Please try again later.</p>
                </div>
                <div class="row text-center loader" style="display:none">
                    <img src="~/Public/Images/loader.gif" />
                </div>
                <form id="projectDetailsForm">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-sm-4">Project Name</label>
                                <input type="hidden" name="Id" class="projid" />
                                <div class="col-sm-8">
                                    <input type="text" class="form-control projname" name="Name" id="Name" placeholder="Project Name" data-val="true" data-val-required="This field is required" />
                                    <span class="text-danger" data-valmsg-for="Name" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-4">Project cost</label>
                                <div class="col-sm-8">
                                    <input type="number" min="0" class="form-control cost" name="Cost" id="Cost" data-val="true" data-val-required="This field is required" />
                                    <span class="text-danger" data-valmsg-for="Cost" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSaveProject">Save changes</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteProjectModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Confirm Delete?</h4>
            </div>
            <div class="modal-body">
                <div class="row text-center loader" style="display:none">
                    <img src="~/Public/Images/loader.gif" />
                </div>
                <div class="row">
                    <div class="alert alert-success" id="successdelete" style="display:none">
                        <p>Deleted Successfully.</p>
                    </div>
                    <div class="alert alert-danger" id="errorDelete" style="display:none">
                        <p>An error has occurred.</p>
                    </div>
                </div>
                <div class="row" id="deleteConfirm">
                    <div class="col-md-12">
                        <p>Are you sure you want to delete the <span class="projname"></span>? It will remove the associated employees from the <span class="projname"></span> project.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="btnDeleteProject">Delete</button>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
    <script>
        let table;
        $(document).ready(function () {
            table = $('#tblProjects').DataTable({
                "oLanguage": { "sEmptyTable": "No Projects added." },
                "processing": true,
                "serverSide": true,
                "ajax": {
                    url: '/manager/getprojects',
                    type: 'POST',
                    data: function (data) {

                    }
                },
                "columnDefs": [
                    {
                        "targets": 2,
                        "searchable": false,
                        "orderable": false,
                        // "className": "dt-body-center",
                        "render": function (data, type, full, meta) {
                            return `<a title="Assign Employees" class="btn btn-primary" href="/manager/Employees?projid=${data}"><i class="glyphicon glyphicon-user"></i></a> | <button title="Edit Details" type='button' class="btn btn-primary btnEdit" data-id='${data}' data-projname='${full.Name}' data-cost="${full.Cost}"><i class="glyphicon glyphicon-edit"></i></button> | <button title="Delete Project" type="button" class="btn btn-danger btnDelete" data-id='${data}' data-projname='${full.Name}'><i class="glyphicon glyphicon-trash"></i></button>`;
                        }
                    }],
                "columns": [
                    { "data": "Name", "className": "text-center" },
                    { "data": "Cost", "className": "text-center" },
                    { "data": "Id", "className": "text-center" }
                ]
            });

            $("#tblProjects").on("click", ".btnEdit", function () {
                $(".loader").hide();
                $("#errormsg").hide();
                $("#successmsg").hide();

                var projid = $(this).data('id');
                var projname = $(this).data('projname');
                var cost = $(this).data('cost');

                $(".projid").val(projid);
                $("input.projname").val(projname);
                $(".cost").val(cost);

                $("#projectModal").modal('show');
            });

            $("#tblProjects").on("click", ".btnDelete", function () {
                $("#deleteConfirm").show();
                $(".loader").hide();
                $("#successdelete").hide();
                $("#errorDelete").hide();

                var projid = $(this).data('id');
                var projname = $(this).data('projname');

                $(".projid").val(projid);

                $("span.projname").html(projname);

                $("#deleteProjectModal").modal('show');
            });

            $("#btnAddProject").on("click", function () {
                $(".projid").val('');
                $("input.projname").val('');
                $(".cost").val('');

                $("#projectModal").modal('show');
            });

            $("#btnSaveProject").on("click", function () {
                $("#errormsg").hide();
                var form = $("#projectDetailsForm")
                    .removeData("validator") /* added by the raw jquery.validate plugin */
                    .removeData("unobtrusiveValidation");  /* added by the jquery unobtrusive plugin*/

                $.validator.unobtrusive.parse(form);

                if ($("#projectDetailsForm").valid()) {
                    $("#projectDetailsForm").hide();
                    $(".loader").show();

                    var data = {
                        "Id": $(".projid").val(),
                        "Name": $("input.projname").val(),
                        "Cost": $(".cost").val(),
                    }

                    $.ajaxPost('@Url.Action("AddProject", "Manager")', data, function (data) {
                        if (data.Success == true) {
                            $(".loader").hide();
                            $("#successmsg").show();
                            table.ajax.reload();
                            $("#projectDetailsForm").show();
                            setTimeout(function () {
                                $("#projectModal").modal('hide');
                                $(".loader").hide();
                                $("#successmsg").hide();
                            }, 2000);
                        }
                        else {
                            $("#projectDetailsForm").show();
                            $(".loader").hide();
                            $("#errormsg").show();
                        }
                    })
                }
            });

            $("#btnDeleteProject").on("click", function () {
                $("#deleteConfirm").hide();
                $(".loader").show();
                $("#errorDelete").hide();
                $("#successdelete").hide();

                var data = {
                    "Id": $(".projid").val()
                }

                $.ajaxPost("@Url.Action("DeleteProject", "Manager")", data, function (data) {
                    if (data.Success == true) {
                        $(".loader").hide();
                        $("#successdelete").show();

                        setTimeout(function () {
                            $("#deleteProjectModal").modal('hide');
                            $(".loader").hide();
                            $("#successdelete").hide();
                            $("#deleteConfirm").show();
                        }, 2000);
                        table.ajax.reload();
                    }
                    else {
                        $("#deleteConfirm").show();
                        $("#errorDelete").show();
                        $(".loader").hide();
                    }
                })
            });
        });
    </script>
}